</a>

<script>
  function init() {
    console.log("Script initialized"); // Debug log
    
    const button = document.getElementById('whatsapp-button');
    const networkSection = document.getElementById('network');
    
    if (!button || !networkSection) {
      console.log("Elements not found:", { button: !!button, networkSection: !!networkSection }); // Debug log
      return;
    }

    function checkScroll() {
      const networkTop = networkSection.offsetTop;
      const scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
      
      console.log("Scroll check:", { networkTop, scrollPosition }); // Debug log

      if (scrollPosition >= networkTop - window.innerHeight / 2) {
        button.classList.remove('opacity-0', 'pointer-events-none');
        button.classList.add('opacity-100', 'pointer-events-auto');
      } else {
        button.classList.add('opacity-0', 'pointer-events-none');
        button.classList.remove('opacity-100', 'pointer-events-auto');
      }
    }

    // Check on scroll
    window.addEventListener('scroll', checkScroll);
    
    // Initial check
    checkScroll();
  }

  // Run on page load
  document.addEventListener('astro:page-load', init);
  
  // Also run immediately in case the event has already fired
  init();
</script>

<style>
  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(37, 211, 102, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
    }
  }

  #whatsapp-button.opacity-100 {
    animation: pulse 2s infinite;
  }
</style>
