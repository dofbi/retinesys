---
const testimonials = [
  {
    name: "John Smith",
    company: "Tech Corp",
    text: "Digital signage transformed our brand visibility."
  },
  {
    name: "Sarah Johnson",
    company: "Retail Plus",
    text: "The ROI exceeded our expectations significantly."
  }
];
---
<section class="py-20">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-16">Client Success Stories</h2>
    <div class="grid md:grid-cols-2 gap-12">
      {testimonials.map(testimonial => (
        <div class="bg-gray-50 p-8 rounded-lg">
          <p class="text-gray-600 mb-4">"{testimonial.text}"</p>
          <p class="font-semibold">{testimonial.name}</p>
          <p class="text-sm text-gray-500">{testimonial.company}</p>
        </div>
      ))}
    </div>
  </div>
</section>
